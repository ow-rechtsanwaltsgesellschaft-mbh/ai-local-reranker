{
  "tests": [
    {
      "name": "Health Check",
      "input": {
        "endpoint": "/health"
      },
      "timeout": 30000
    },
    {
      "name": "Rerank Test - Fast Model",
      "input": {
        "endpoint": "/rerank",
        "method": "POST",
        "body": {
          "query": "What is machine learning?",
          "documents": [
            "Machine Learning is a subset of artificial intelligence.",
            "Python is a programming language.",
            "Deep Learning uses neural networks."
          ],
          "top_n": 2,
          "model": "fast"
        }
      },
      "timeout": 60000
    },
    {
      "name": "Rerank Test - BGE-v2 Model",
      "input": {
        "endpoint": "/rerank",
        "method": "POST",
        "body": {
          "query": "What is the capital of the United States?",
          "documents": [
            "Carson City is the capital city of the American state of Nevada.",
            "Washington, D.C. is the capital of the United States. It is a federal district.",
            "Capital punishment has existed in the United States since before the United States was a country."
          ],
          "top_n": 3,
          "model": "bge-v2"
        }
      },
      "timeout": 60000
    }
  ],
  "config": {
    "gpuTypeId": "NVIDIA GeForce RTX 4090",
    "gpuCount": 1,
    "env": [
      {
        "key": "RERANKER_MODEL",
        "value": "bge-v2"
      },
      {
        "key": "PYTHONUNBUFFERED",
        "value": "1"
      }
    ],
    "allowedCudaVersions": [
      "12.7",
      "12.6",
      "12.5",
      "12.4",
      "12.3",
      "12.2",
      "12.1",
      "12.0"
    ]
  }
}

